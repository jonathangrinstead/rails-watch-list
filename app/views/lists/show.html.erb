
<nav class="navbar navbar-light bg-light">
<%= link_to "HomePage", lists_path,class:"btn btn-dark" %>
<br>
<%= link_to "Create Bookmark", new_list_bookmark_path(@list), class:"btn btn-primary" %>
</nav>

<div class="row">

<% @list.bookmarks.each do |bookmark| %>
  <div class="card m-4 col-4 p-2" style="width: 18rem;">
    <img class="card-img-top" src="<%= bookmark.movie.poster_url %>" alt="Card image cap">
      <div class="card-body">
      <h5 class="card-title"> <%= bookmark.movie.title %></h5>
      <p class="card-text"><%= bookmark.movie.overview %></p>
      <p class="card-text"><strong><%= bookmark.movie.rating %> ⭐️</strong></p>
      <%= link_to "Delete", bookmark_path(bookmark), data: { "turbo-method": :delete }, class:"btn btn-danger" %>
      </div>
    </div>
  <% end %>
</div>
